<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radius"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="#E4724E"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="195dp"
        android:layout_height="185dp"
        android:layout_marginHorizontal="100dp"

        android:src="@drawable/quizzz"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:strokeWidth="-1dp">
        <LinearLayout
            android:paddingVertical="80dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#222121"
            android:textSize="33sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Login now to explore more."
            android:textColor="#A271FA"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/email_svgrepo_com"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:padding="10dp"
            android:ems="10"
            android:hint="E-mail"
            android:layout_gravity="center"

            android:inputType="textEmailAddress"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textColorHint="#7C7B7B"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"

            android:drawableStart="@drawable/lock_alt_svgrepo_com"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#7C7B7B"

            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="380dp"
            android:visibility="gone" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/b1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
android:layout_marginHorizontal="30dp"
            android:backgroundTint="#A271FA"
            android:text="Log in"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Don't have an account ?"
            android:textColor="#1B1A1A" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sign up"
            android:padding="10dp"
            android:textColor="#7141C8" />
        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>